<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textview_deputy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp"
            tools:text="name"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/windowBackground"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            >

            <ImageView
                android:id="@+id/imageview_photo"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:src="@drawable/nophoto"
                android:scaleType="centerCrop"
                android:contentDescription="@string/image_content_description"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/textview_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageview_photo"
                android:layout_toEndOf="@+id/imageview_photo"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                tools:text="position"
                />

            <TextView
                android:id="@+id/textview_deputy_fractionRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_position"
                android:layout_toRightOf="@+id/imageview_photo"
                android:layout_toEndOf="@+id/imageview_photo"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                tools:text="fractionRole"
                />

            <TextView
                android:id="@+id/textview_deputy_fractionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_deputy_fractionRole"
                android:layout_toRightOf="@+id/imageview_photo"
                android:layout_toEndOf="@+id/imageview_photo"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                tools:text="fractionName"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/textview_deputy_ranks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            tools:text="ranks"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>