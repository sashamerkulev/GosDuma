<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false"
>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >

        <ImageView
            android:id="@+id/imageview_photo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/nophoto"
            android:scaleType="centerCrop"
            android:contentDescription="фото"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/deputy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/imageview_photo"
            android:text="name"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            />

        <TextView
            android:id="@+id/deputy_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="position"
            android:layout_below="@+id/deputy_name"
            android:layout_toRightOf="@+id/imageview_photo"
            />

        <TextView
            android:id="@+id/deputy_fraction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="fraction"
            android:layout_below="@+id/deputy_position"
            android:layout_toRightOf="@+id/imageview_photo"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

