<resources>

    <style name="AppTheme.Normal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="separatorColor">@color/separator</item>
        <item name="blackColor">@color/black22</item>
        <item name="actionBarTextColor">@color/white</item>
        <item name="inactiveColor">@color/colorInactive</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_round_10dp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
    </style>

</resources>
