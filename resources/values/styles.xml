<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="separatorColor">@color/separator</item>
        <item name="actionBarTextColor">@color/actionBarTextColor</item>
        <item name="inactiveColor">@color/colorInactive</item>
        <item name="activeColor">@color/colorActive</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorInactive</item>

    </style>

    <style name="AppButtonStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/shape_round_10dp</item>
    </style>

    <style name="BottomNavigation" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
    </style>

    <style name="CaptionBoldTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaptionTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DescriptionTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
